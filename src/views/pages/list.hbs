<h2>Lista de productos</h2>
{{#if productos.[0]}}
    <table class="text-white">
        <caption>Lista total de productos</caption>
        <thead>
            <tr>
                <th  class="text-white">#ID</th>
                <th >Nombre</th>
                <th >Precio</th>
                <th >Imagen</th>
            </tr>
        </thead>
        <tbody>
        {{#each productos}}
            <tr>
                <td>{{this.id}}</td>
                <td>{{this.title}}</td>
                <td>{{this.price}}</td>
                <td>{{this.src}}</td>
            </tr>
        {{/each}}
        </tbody>
    </table>
{{else}}
<h2>No hay productos en la lista</h2>
{{/if}}
